{
  "name": "AymenZeR Notifier",
  "version": "1.0",
  "description": "Notifie les nouveaux contenus d'AymenZeR",
  "manifest_version": 3,
  "permissions": [
    "alarms",
    "notifications",
    "storage",
    "identity",
    "contextMenus",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://www.googleapis.com/*",
    "https://api.twitch.tv/*",
    "https://id.twitch.tv/*",
    "https://www.tiktok.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup/popup.html"
  },
  "options_page": "settings/settings.html",
  "oauth2": {
    "client_id": "8xiery290o0ioczddjogf337p1etp7",
    "scopes": ["user:read:email", "user:read:subscriptions"]
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/*", "settings/settings.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
